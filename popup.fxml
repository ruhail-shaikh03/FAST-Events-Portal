<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.popup_controller">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <Label fx:id="headerLabel" text="Header" style="-fx-font-size: 14pt;"/>
    <ScrollPane fitToWidth="true" maxHeight="200.0">
        <VBox>
            <Label fx:id="textLabel" text="Message text goes here" wrapText="true"/>
        </VBox>
    </ScrollPane>
    <Button text="Close" onAction="#closePopup"/>
</VBox>